<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/my_card"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="30dp"

    app:cardCornerRadius="38dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layout">

        <TextView
            android:id="@+id/card_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="▢/▢/▢/▢/▢"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/card_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="CARD TITLE"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/card_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_title"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:drawablePadding="10dp"
            android:paddingLeft="40dp"
            android:text="What a joke here"
            android:textSize="16dp"
            app:drawableLeftCompat="@drawable/ruler" />

        <TextView
            android:id="@+id/card_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_text"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:drawablePadding="10dp"
            android:paddingLeft="40dp"
            android:text="What a joke here"
            android:textSize="16dp"
            app:drawableLeftCompat="@drawable/plob" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/card_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"

            android:backgroundTint="@color/light_grey"
            android:foregroundTint="@color/light_grey"
            android:src="@mipmap/fist"
            app:borderWidth="0dp"
            app:elevation="1dp"
            app:fabCustomSize="130dp"
            app:maxImageSize="100dp"
            app:rippleColor="@color/red"
            app:tint="@color/red" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>